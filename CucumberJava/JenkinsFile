pipeline {
    agent { docker { image 'maven:3.9.1' 
                      args '-u root'  } }    
    stages {
        stage('Source') {
            steps {
                sh 'mvn --version'
                sh 'git --version'
                git branch: 'master',
                    url: 'https://github.com/lokeshsampath/JenkinsTest.git'
            }
        }
        stage('Test') {
            steps {
                dir("${env.WORKSPACE}/CucumberJava"){
                    sh 'mvn clean test'
                }
            }
        }      
    }
}
