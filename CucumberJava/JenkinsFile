pipeline {
    agent { dockerfile true 
             }
    stages {
        stage('Source') {
            steps {
                sh 'mvn --version'
                sh 'git --version'
                git branch: 'master',
                    url: 'https://github.com/lokeshsampath/JenkinsTest.git'
            }
        }
        stage('Test') {
            steps {                
                    sh ' cd /app ; mvn clean test'                
            }
        }      
    }
}
