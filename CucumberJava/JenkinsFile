pipeline {
    agent { dockerfile true 
            args '-v ${env.WORKSPACE}/CucumberJava:/app' }
    stages {
        stage('Source') {
            steps {
                sh 'mvn --version'
                sh 'git --version'
                git branch: 'master',
                    url: 'https://github.com/lokeshsampath/JenkinsTest.git'
            }
        }
        stage('Test') {
            steps {
                dir(path: '/app'){
                    sh 'mvn clean test'
                }
            }
        }      
    }
}
